# editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file.
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation (no size specified).
[Makefile]
indent_style = tab

# Indentation override for all HTML.
[**/*.html]
indent_style = space
indent_size = 2

# Indentation override for all JS.
[**/*.js]
indent_style = space
indent_size = 2

# Indentation override for all JSON.
[**/*.json]
indent_style = space
indent_size = 2

# Indentation override for all YML.
[**/*.yml]
indent_style = space
indent_size = 2

# Indentation override for all CSS.
[**/*.css]
indent_style = space
indent_size = 2

# Indentation override for all PHP.
[*.php]
indent_style = space
indent_size = 2
insert_final_newline = true

# Indentation override for all Blade PHP.
[*.blade.php]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

root = true
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
