{
  "devDependencies": {
    "autoprefixer"  : "^6.3.6",
    "browserify"    : "^12.0.1",
    "concat-cli"    : "^4.0.0",
    "hbsfy"         : "^2.4.1",
    "node-sass"     : "^3.7.0",
    "parallelshell" : "^2.0.0",
    "postcss-cli"   : "^2.5.2",
    "watch"         : "^0.18.0"
  },
  "dependencies": {
    "autotrack"    : "^0.5.0",
    "browsernizr"  : "^2.0.1",
    "function-bind": "*",
    "handlebars"   : "*",
    "jquery"       : "*"
  },
  "browserify": {
    "transform": [
      "hbsfy"
    ]
  },
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -b 'last 2 versions' -r src/dist/css/build.css",

    "js:common": "browserify src/dist/js/common/index.js -o src/dist/js/compiled/common.js",
    "js:app": "browserify -t [ hbsfy -e hbs ] src/dist/js/app/index.js -o src/dist/js/compiled/app.js",
    "js:build": "npm run js:app && concat-cli -f src/dist/js/compiled/*.js -o src/dist/js/build/build.js",
    "js:watch": "watch 'npm run js:build' src/dist/js/public/ src/dist/js/app/",

    "css:build": "node-sass --include-path scss src/dist/css/scss/build.scss src/dist/css/build.css | npm run autoprefixer",
    "css:watch": "watch 'npm run css:build' src/dist/css/scss/",

    "watch": "parallelshell 'npm run js:watch' 'npm run css:watch'"
  },
  "private": true
}