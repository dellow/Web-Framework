{
  "name": "web-framework",
  "version": "3.3.1",
  "description": "A rapid frontend ['framework', 'wrapper', 'workflow'] for web applications using SASS, Webpack, Gulp and NPM.",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.16.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-git": "^1.11.3",
    "gulp-livereload": "^3.8.1",
    "gulp-notify": "^2.2.0",
    "gulp-sass": "^2.3.2",
    "gulp-sass-glob-import": "^0.1.0",
    "gulp-standard": "^8.0.2",
    "imagemin-cli": "^3.0.0",
    "istanbul-instrumenter-loader": "^1.0.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-jquery": "^0.1.1",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.8.0",
    "minifier": "^0.7.1",
    "nightwatch": "^0.9.4",
    "standard": "^8.1.0",
    "webpack": "^1.13.1",
    "webpack-stream": "^3.2.0"
  },
  "dependencies": {
    "autotrack": "*",
    "browsernizr": "*",
    "jquery": "*",
    "underscore": "*"
  },
  "standard": {
    "globals": [
      "$"
    ],
    "ignore": [
      "Gulpfile.js",
      "Gulpfile.helpers.js"
    ]
  },
  "config": {
    "url": "{{dev_url}}",
    "src": "./src/",
    "dist": "./src/dist/",
    "css": {
      "dirDest": "./src/dist/css/",
      "dirSCSS": "./src/dist/css/scss/",
      "dest": "./src/dist/css/build.css",
      "src": "./src/dist/css/scss/build.scss"
    },
    "js": {
      "dirApp": "./src/dist/js/app/",
      "dirCommon": "./src/dist/js/common/",
      "dirDest": "./src/dist/js/",
      "dirTests": "./src/dist/js/tests/",
      "dest": "./src/dist/js/build/"
    }
  },
  "scripts": {
    "minify": "npm run minify:css && npm run minify:images && npm run minify:js",
    "minify:css": "minify --output $npm_package_config_css_dest $npm_package_config_css_dest",
    "minify:images": "imagemin $npm_package_config_dist/images/**/**/* -o $npm_package_config_dist/images",
    "minify:js": "minify --output $npm_package_config_js_dest $npm_package_config_js_dest",
    "test:integration": "nightwatch",
    "test:unit": "karma start karma.config.js",
    "test": "npm run test:unit && npm run test:integration",
    "sprite": "sprity create $npm_package_config_dist/images/icons/ $npm_package_config_dist/images/icons/png/*.png -c ../images/icons/ -s ../../css/scss/site/_sprites.scss -p sass -n sprite --prefix css-sprite --orientation horizontal --background '#FFFFFF' --margin '2' -d 1:72 -d 2:192"
  },
  "private": true
}
